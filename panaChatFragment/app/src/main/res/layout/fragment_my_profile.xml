<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#d9d9d9"

    android:padding="30dp"
    tools:context=".Fragments.GroupsFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/mProfileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/userdefaul"

        />

    <TextView
        android:id="@+id/mProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/mProfileBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mProfileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/mProfileContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mProfileBirthday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="17dp"

        />

    <github.ankushsachdeva.emojicon.EmojiconTextView
        android:id="@+id/mProfileStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mProfileContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="17dp"

        />

</RelativeLayout>
