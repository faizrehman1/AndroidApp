<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relay"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageViewFriendListPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/userdefaul" />

    <TextView
        android:id="@+id/friendListSingleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/imageViewFriendListPic"
        android:layout_alignTop="@+id/imageViewFriendListPic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:textColor="#000"
        android:layout_toEndOf="@+id/imageViewFriendListPic"
        android:layout_toRightOf="@+id/imageViewFriendListPic"
        android:text="Adnan Ahmed"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:focusable="true"
        android:background="#00000000"
        android:src="@drawable/iii" />
</RelativeLayout>