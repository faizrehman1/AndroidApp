<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/RgroupUserPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:src="@drawable/userdefaul"></com.mikhaellopez.circularimageview.CircularImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentWithBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/content"
        android:layout_toStartOf="@+id/content"
        android:background="@drawable/in_message_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/mRnameUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:text="dasdasdasdas"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

        <github.ankushsachdeva.emojicon.EmojiconTextView
            android:id="@+id/mRtimeUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdsadsad"

            android:textColor="#fff"

            android:textSize="19sp" />

        <ImageView
            android:id="@+id/mRimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:maxHeight="250dp"
            android:maxWidth="250dp" />

    </LinearLayout>
</RelativeLayout>