<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main1"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="135dp"
        android:id="@+id/imageView_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView_heading"
        android:layout_toLeftOf="@+id/textView_heading" />



    <TextView
        android:id="@+id/textView_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_paragraph"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:maxLines="5"
        android:maxLength="300"
        android:ellipsize="end"

        android:layout_alignParentRight="true"

        android:layout_below="@+id/textView_heading"
        android:layout_marginTop="33dp"
        android:text="Small Text"
        android:textColor="#c6b8b8"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/textView_heading"
        android:layout_alignStart="@+id/textView_heading" />

    <ImageView
        android:id="@+id/imageView_thumb"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/thhumb"
                android:layout_below="@+id/textView_paragraph"
        android:layout_alignTop="@+id/imagelike"
        android:layout_toLeftOf="@+id/imagelike"
        android:layout_toStartOf="@+id/imagelike" />

    <ImageView
        android:id="@+id/imagelike"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/like"

        android:layout_below="@+id/textView_paragraph"
        android:layout_toLeftOf="@+id/imageView_share"
        android:layout_toStartOf="@+id/imageView_share" />

    <ImageView
        android:id="@+id/imageView_share"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/share"
        android:layout_below="@+id/textView_para"
        android:layout_alignTop="@+id/imagelike"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>